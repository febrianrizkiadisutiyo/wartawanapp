<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/profil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="19dp"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:onClick="profil"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <ImageView
            android:id="@+id/ivtoday"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="70dp"
            android:src="@drawable/today" />

        <ImageView
            android:id="@+id/ivlogo"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/ivlogo"
            android:drawableEnd="@drawable/ic_baseline_logout_24" />

        <ImageView
            android:id="@+id/ivberita"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_below="@id/ivtoday"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="-24dp"
            android:src="@drawable/gambar" />

        <ImageView
            android:id="@+id/ivtranding"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_below="@id/ivberita"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/tranding" />

        <ImageView
            android:id="@+id/ivberita1"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_below="@id/ivtranding"
            android:layout_marginLeft="8dp"
            android:src="@drawable/berita1" />

        <ImageView
            android:id="@+id/ivberita2"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_below="@id/ivberita1"
            android:layout_marginLeft="8dp"
            android:src="@drawable/berita2" />

        <ImageView
            android:id="@+id/ivberita3"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_below="@id/ivberita2"
            android:layout_marginLeft="8dp"
            android:src="@drawable/berita3" />

        <ImageView
            android:id="@+id/ivadd"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/ivberita2"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="40dp"
            android:onClick="inputberita"
            android:src="@drawable/tambah" />

    </RelativeLayout>
</ScrollView>