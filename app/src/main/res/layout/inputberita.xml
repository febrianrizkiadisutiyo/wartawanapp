<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="25dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_marginStart="80dp"
            android:background="@drawable/custom"
            android:src="@drawable/ic_image" />

        <TextView
            android:id="@+id/tvjudul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:text="Judul"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etjudul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvjudul"
            android:background="@drawable/custom"
            android:hint="Input Judul"
            android:inputType="text"
            android:minHeight="48dp"
            android:paddingHorizontal="20dp" />

        <TextView
            android:id="@+id/tvtanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etjudul"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:text="Tanggal"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ettanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvtanggal"
            android:background="@drawable/custom"
            android:hint="Tanggal Kejadian"
            android:inputType="text"
            android:paddingHorizontal="20dp"
            android:minHeight="48dp" />

        <TextView
            android:id="@+id/tvtkp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ettanggal"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:text="Tempat Kejadian"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ettkp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvtkp"
            android:background="@drawable/custom"
            android:inputType="text"
            android:minHeight="48dp"
            android:hint="Tempat Kejadian Perkara"
            android:paddingHorizontal="20dp"/>

        <TextView
            android:id="@+id/tvtags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ettkp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:text="Tags"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ettags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvtags"
            android:background="@drawable/custom"
            android:inputType="text"
            android:minHeight="48dp"
            android:hint="Tambahkan Tag"
            android:paddingHorizontal="20dp"/>

        <TextView
            android:id="@+id/tvdescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ettags"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:text="Description"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etdeskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvdescription"
            android:layout_marginTop="0dp"
            android:background="@drawable/custom"
            android:drawablePadding="24dp"
            android:minHeight="48dp"
            android:hint="Isi Berita"
            android:paddingHorizontal="20dp"/>

        <ImageButton
            android:id="@+id/btntombol"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_below="@+id/etdeskripsi"
            android:layout_marginStart="250dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/publikk"
            android:onClick="login" />

        <ImageButton
            android:id="@+id/btndraft"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_below="@+id/etdeskripsi"
            android:layout_marginStart="120dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/draft"
            android:onClick="login" />
    </RelativeLayout>
</ScrollView>